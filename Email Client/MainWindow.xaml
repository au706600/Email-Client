<Window x:Name="Load_MainWindow" x:Class="Email_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Email_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="143*"/>
            <ColumnDefinition Width="67*"/>
            <ColumnDefinition Width="157*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="58*"/>
        </Grid.ColumnDefinitions>
        <ListView ItemsSource="{Binding EmailEntries}" Width="800" HorizontalContentAlignment="Stretch" Grid.ColumnSpan="10" Margin="0,0,-200,0" SelectedItem="{Binding SelectedEmail}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="120"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{Binding Sender}" VerticalAlignment="Center"></TextBlock>
                        <TextBlock Grid.Column="1" Text="{Binding Topic}" VerticalAlignment="Center" Padding="60,0,0,0" TextTrimming="CharacterEllipsis"></TextBlock>
                        <TextBlock Grid.Column="2" Text="{Binding Date}" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
