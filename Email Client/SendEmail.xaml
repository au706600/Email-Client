<Window x:Class="Email_Client.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Email_Client"
        mc:Ignorable="d"
        Title="Send Email" Height="450" Width="800">
    <Grid x:Name="WindowForm">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="send_Btn" Content="Send Email" HorizontalAlignment="Left" Margin="556,367,0,0" VerticalAlignment="Top" Click="Button_Click" Height="30" Width="88" FontWeight="Bold"/>
        <TextBox x:Name="txtTo" HorizontalAlignment="Left" Margin="169,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="342" Height="28"/>
        <TextBox x:Name="txtTopic" GotFocus="txtTopic_GotFocus" LostFocus="txtTopic_LostFocus" HorizontalAlignment="Left" Margin="133,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="378" Height="29" AllowDrop="False" AutomationProperties.Name=""/>
        <TextBox x:Name="txtText" GotFocus="txtText_GotFocus" LostFocus="txtText_LostFocus" HorizontalAlignment="Left" Margin="133,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="378" Height="120" VerticalScrollBarVisibility="Auto"/>
        <Label Content="To: " HorizontalAlignment="Left" Margin="133,71,0,0" VerticalAlignment="Top" FontSize="14"/>

    </Grid>
</Window>
