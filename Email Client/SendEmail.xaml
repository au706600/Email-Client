<Window x:Class="Email_Client.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Email_Client" xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Send Email" Height="600" Width="1000" MinHeight="400" MinWidth="700">
    <Grid x:Name="WindowForm" 
          Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Button Click="Back_Click" 
                Height="40" 
                Width="40" 
                Background="Transparent" 
                BorderThickness="0" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Grid.Row="0" 
                Grid.Column="0"
                Margin="0,0,0,10">
            <Path 
                Data="M 25,10 L 5,10 M 5,10 L 15,0 M 5,10 L 15,20" 
                Stroke="Black"
                StrokeThickness="2"
                Fill="Transparent"/>
        </Button>


        <StackPanel Orientation="Horizontal"
                    Grid.Row="1" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="2" 
                    Margin="0,10">

            <Label Content="To: " 
                   Foreground="Black" 
                   FontWeight="Bold" 
                   FontSize="14" 
                   VerticalAlignment="Center"/>

            <TextBox x:Name="txtTo" 
                     Height="28" 
                     MinWidth="300" 
                     MaxWidth="500" 
                     HorizontalAlignment="Left"/>
        </StackPanel>


        <StackPanel Orientation="Horizontal"
                    Grid.Row="2" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="2">

            <TextBox x:Name="txtTopic" 
                     GotFocus="txtTopic_GotFocus" 
                     LostFocus="txtTopic_LostFocus" 
                     Height="29" 
                     MinWidth="300" 
                     Width="Auto"/>
        </StackPanel>

        <Grid Grid.Row="3" 
              Grid.Column="0" 
              Grid.ColumnSpan="2"
              Margin="0,10">
            
            <TextBox x:Name="txtText" 
                     GotFocus="txtText_GotFocus" 
                     LostFocus="txtText_LostFocus" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     MinHeight="200"/>
            
            <wv2:WebView2 x:Name="ViewHtml" 
                          Visibility="Collapsed"
                          MinHeight="200"/>
        </Grid>

        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0">
            <ListBox x:Name="listFiles" Visibility="Hidden"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" 
                    Grid.Row="5" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="2" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">

            <Button Height="30" 
                    Width="30" 
                    Margin="0,0,10,0"
                    Click="Upload_Click">   
                <Viewbox>
                    <Path Data="M12 16V8M12 8L8 12M12 8L16 12M5 20H19"
                          Stroke="Black"
                          StrokeThickness="2"
                          StrokeStartLineCap="Round"
                          StrokeEndLineCap="Round"
                          Width="23"
                          Height="30"
                          StrokeLineJoin="Round"/>  
                </Viewbox>
            </Button>
            
            <Button x:Name="send_Btn" 
                    Content="Send Email"
                    Height="30" 
                    Width="88" 
                    FontWeight="Bold"
                    Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
